        let g:calendar_diary_list = [
            \   {"name":"Diary", "path":"path/to/diary", "ext":"diary"},
            \   {"name":"Wroks", "path":"path/to/works", "ext":"task"},
            \   {"name":"Tasks", "path":"path/to/tasks", "ext":"task"},
            \ ]
